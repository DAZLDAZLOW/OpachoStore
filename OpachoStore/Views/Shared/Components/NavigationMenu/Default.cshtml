@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn @((ViewBag.SelectedCategory == null)?"btnPrimary":"btn-outline-secondary")" asp-action="Index"
       asp-controller="Products" asp-route-category="">
        Все товары
    </a>
    @foreach (string category in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @((category == ViewBag.SelectedCategory)?"btnPrimary":"btn-outline-secondary")"
           asp-action="Index" asp-controller="Products"
           asp-route-category="@category"
           asp-route-productPage="1">
            @category
        </a>
    }
</div>